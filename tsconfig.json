{
    "compilerOptions": {
      "target": "ES5",
      "module": "CommonJS",
      "lib": ["ES5", "ES6", "DOM"],
      "esModuleInterop": true,
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "downlevelIteration": true,
      "baseUrl": "./"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
    }